 <!--================login_part Area =================-->
    
    
    
    <section id="section" style="display: none;"></section>
    <section class="login_part section_padding  " id="page">
        <div class="container">
            <div class="row align-items-center">
                
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3 style="margin-bottom: 10px;margin-left: 10px;" >Change Password</h3>
                            {{#if Err}}
                            <div class="alert alert-danger" role="alert" >
                           <i class="fa fa-exclamation-triangle"></i> {{Err}}
                         </div>
                         {{/if}}
                            <form class="row contact_form" action='/forget-password'  method="post"  id="forgetPassForm">
                            <div class="col-md-12 form-group p_star">
                                    <input type="email" class="form-control"  name="email" value=""
                                        placeholder="Email">
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <input type="text" name="userId" value="{{userId}}" hidden>
                                    <input type="password" class="form-control" id="password" name="new_pass" value=""
                                        placeholder="New Password">
                                </div>
                                
                                <div class="col-md-12 form-group p_star">
                                    <input type="password" class="form-control" id="confirm_password" name="confirm_pass" value=""
                                        placeholder="Confirm Password">
                                </div>
                                <div class="col-md-12 form-group">
                                    
                                    <button type="submit" value="submit" id="submitBtn" class="btn_3">
                                        confirm
                                    </button>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


