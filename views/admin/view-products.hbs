 <style>
      body{
        min-height: 150vh !important;
    }
 </style>
 
<section id="section" style="display: none;"></section>
<section id="view-product" >
  <h1  class="text-center mt-5">Your Products</h1>
    <div  class="container" style="margin-top: 2em;">
        <a href="/admin/add-product" class="default-btn border-radius-5 mb-3  float-left" style="float: right;">Add Product</a>
        <table class="table nowrap" id="productsTable">
  <thead class="table-dark">
    <tr>
     
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th>

      </th>
    </tr>
  </thead>
  <tbody>
    <div class="admin-view-products">
      
    
      {{#each products}}
      
    <tr style="font-weight: 700;text-decoration: none;">
      
      <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}/displayImage{{this._id}}.jpg"  alt=""></td>
      <td>{{this.name}}</td>
      <td><i class="las la-rupee-sign" style="font-size:0.95em;padding-bottom: 1em;"></i>{{#priceComma this.price}}{{/priceComma}}</td>
      <td>{{this.category}}</td>
      <td><a href="admin/edit-product?id={{this._id}}" class="btn btn-primary">Edit</a>
      <a href="admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}}')">Delete</a>
      {{#if this.initialPrice}}
      <a  class="ribbon-out"><span class="ribbon-2">On offer</span></a>
      {{else}}
      <a href="admin/add-offer?id={{this._id}}" class="btn btn-success">Add Offer</a>
      {{/if}}
      </td>
    </tr>
    
    {{/each}}
    </div>
    
  </tbody>
</table>
    </div>
</section>
<script>
  console.log(window.innerWidth)
  let screen=window.innerWidth
  let viewProduct=document.getElementById('view-product')
  let section=document.getElementById('section')
  if(screen < 991){
    viewProduct.style.display='none'
    section.style.display='block'
    let div=document.createElement('div')
    div.setAttribute('class','container')
    
    let h4=document.createElement('p')
    h4.setAttribute('class','text-center mt-5')
    h4.innerHTML='Please use a Desktop or Laptop to view this page'
    div.appendChild(h4)
    section.appendChild(div)
  }
</script>
<script>
  $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>


