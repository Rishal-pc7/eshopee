 <div class="banner-area">
	<div class="container">
		<div class="row align-items-center">
			
			<div class="col-lg-4">
				<div class="banner-side" id="top-sale">
					<h2>Top Sale</h2>
					<div class="row">
						{{#each products}}
						<div class="col-lg-12  col-md-6">
							<div class="banner-side-item">
								
								<div class="row align-items-center">
									<div class="col-lg-5 col-sm-5 col-5 col-md-6 pr-0">
										<div class="banner-side-img"> <img src="/product-images/{{this.item}}/displayImage{{this.item}}.jpg" alt="Images"> </div>
									</div>
									<div class="col-lg-7 col-sm-7 col-7 col-md-6">
										<div class="banner-side-content">
											
											
											
											
											<h3  id="topdeals{{this._id}}">{{this.product.name}}-{{this.product.color}}</h3>
											
											
										
											<span>
												{{#if this.product.initialPrice}}
												 <del class="text-secondary" style="font-weight: 400;">₹{{#priceComma this.product.initialPrice}}{{/priceComma}}</del>
												{{/if}}
												₹{{#priceComma this.product.price}}{{/priceComma}}</span> 
                        <div style="color: rgb(114, 113, 113) !important;">Quantity : {{this.quantity}}</div></div>

                        
									</div>
								</div>
								
							</div>
						</div>
						{{/each}}
						
						
					</div>
				</div>
			</div>
		</div>
	</div>
	
</div>   


