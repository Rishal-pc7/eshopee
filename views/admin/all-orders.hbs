    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    
                    {{#if_eq orders.length 0}}
                    <h2 class="text-center">
                        No Orders
                    </h2>
                    
        
                    
                    
                    <div class="hr-line-dashed"></div>
                    {{else}}
                    <h2 class="text-center">
                        All Orders
                    </h2>
                    
        
                    
                    
                    <div class="hr-line-dashed"></div>
                    {{#each orders}}
                    <div class="search-result">
                        <div class="row">
                            
                            <div class="">
                                 <h3><strong>ORDER ID :</strong>  {{this._id}}</h3>
                                 <p>Order Placed On {{this.date}}</p>
                                 <table class="shop_table">
         
                                        <thead>
                                            <tr>
                                                
